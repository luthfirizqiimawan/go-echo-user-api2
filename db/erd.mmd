%% Mermaid ERD for go-echo project
%% Current schema: users table
%% Suggested auth extension included below

erDiagram
    USERS {
        int id PK "serial"
        string name
        int age
    }

%% Suggested extension for authentication (optional)
%% This would add email and password hash plus timestamps

erDiagram
    USERS_EXTENDED {
        int id PK "serial"
        string name
        string email "unique"
        string password_hash
        int age
        datetime created_at
        datetime updated_at
    }

    USERS_EXTENDED ||--|| USERS : "same person (if migrated)"

%% Notes:
%% - Current schema in db/schema.sql uses 'users' with id, name, age.
%% - If you add authentication, prefer 'email' + 'password_hash' and timestamps.
